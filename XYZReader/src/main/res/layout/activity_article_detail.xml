<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinator"
    >


  <android.support.design.widget.AppBarLayout
      android:id="@+id/app_bar_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:elevation="4dp"
      >

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:expandedTitleGravity="bottom"
        app:expandedTitleTextAppearance="@android:color/transparent"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        >

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="256dp"
          app:layout_collapseMode="parallax"
          app:layout_collapseParallaxMultiplier="0.2"
          >

        <ImageView
            android:id="@+id/ctl_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:transitionName="@string/shared_img"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/scrim_gradient"
            />
        <LinearLayout
            android:id="@+id/header_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical"

            >
          <TextView
              android:id="@+id/toolbar_text_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:textColor="@color/white"
              android:textSize="20sp"
              tools:text="Welcome to the Jungle"
              />
          <TextView
              android:id="@+id/toolbar_author_text_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:textSize="16sp"
              tools:text="Welcome to the Jungle"
              />
        </LinearLayout>
      </FrameLayout>
      <com.example.xyzreader.ui.CustomToolbar
          android:id="@+id/detail_toolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          app:layout_collapseMode="pin"
          />
    </android.support.design.widget.CollapsingToolbarLayout>
  </android.support.design.widget.AppBarLayout>
  <android.support.v4.widget.NestedScrollView
      android:id="@+id/article_item_nested_scroll_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      >
    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:lineSpacingExtra="20dp"
        android:padding="16dp"
        android:textColor="#de000000"
        android:textSize="14sp"
        />

  </android.support.v4.widget.NestedScrollView>
  <android.support.design.widget.FloatingActionButton
      android:id="@+id/floatingActionButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|right"
      android:layout_margin="16dp"
      app:backgroundTint="@color/theme_primary"
      app:elevation="12dp"
      app:fabSize="normal"

      app:rippleColor="?attr/editTextColor"
      app:srcCompat="@drawable/ic_play_arrow_black_24dp"

      />
</android.support.design.widget.CoordinatorLayout>