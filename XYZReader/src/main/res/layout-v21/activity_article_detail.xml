<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


  <android.support.design.widget.AppBarLayout
      android:id="@+id/app_bar_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:elevation="4dp"
      tools:targetApi="lollipop"
      >

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:expandedTitleGravity="bottom"
        app:expandedTitleTextAppearance="@android:color/transparent"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        >

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/activity_detail_frame_layout_layout_height"
          app:layout_collapseMode="parallax"
          app:layout_collapseParallaxMultiplier="0.2"
          >

        <ImageView
            android:id="@+id/ctl_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/ctl_img_content_desc"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:transitionName="@string/shared_img"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/scrim_gradient"
            />
        <LinearLayout
            android:id="@+id/header_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="@dimen/content_tv_padding_start"
            android:orientation="vertical"
            >
          <TextView
              android:id="@+id/toolbar_text_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:textSize="20sp"
              tools:text="Welcome to the Jungle"
              />
          <TextView
              android:id="@+id/toolbar_author_text_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:textSize="16sp"
              tools:text="Welcome to the Jungle"
              />
        </LinearLayout>
      </FrameLayout>
      <com.example.xyzreader.ui.CustomToolbar
          android:id="@+id/detail_toolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          app:layout_collapseMode="pin"
          />
    </android.support.design.widget.CollapsingToolbarLayout>
  </android.support.design.widget.AppBarLayout>
  <android.support.v4.widget.NestedScrollView
      android:id="@+id/article_item_nested_scroll_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      >
    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:lineSpacingExtra="20dp"
        android:paddingBottom="16dp"
        android:paddingEnd="@dimen/content_tv_padding_end"
        android:paddingStart="@dimen/content_tv_padding_start"
        android:paddingTop="@dimen/content_tv_padding_top"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        android:linksClickable="true"
        />

  </android.support.v4.widget.NestedScrollView>
  <android.support.design.widget.FloatingActionButton
      android:id="@+id/floatingActionButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|end"
      android:layout_margin="@dimen/fab_margin"
      android:clickable="true"
      android:focusable="true"
      app:srcCompat="@drawable/play_icon"
      />
</android.support.design.widget.CoordinatorLayout>